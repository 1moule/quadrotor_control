<launch>
    <!-- Arguments -->
    <arg name="map" default="test_map"/>
    <arg name="map_file" default="$(find bipedal_wheel_navigation)/maps/$(arg map).yaml"/>
    <arg name="open_rviz" default="true"/>
    <arg name="move_forward_only" default="false"/>

    <!-- Robot Model -->
    <param name="robot_description"
           command="$(find xacro)/xacro $(find quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>

    <!-- Map server -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

    <!-- Localization -->
    <!--    <include file="$(find quadrotor_navigation)/launch/amcl.launch"/>-->
    <include file="$(find quadrotor_localization)/launch/scan_to_map_location.launch"/>

    <!-- move_base -->
    <include file="$(find quadrotor_navigation)/launch/move_base.launch">
        <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>

    <!-- rviz -->
    <group if="$(arg open_rviz)">
        <node pkg="rviz" type="rviz" name="rviz" required="true"
              args="-d $(find quadrotor_navigation)/rviz/navigation.rviz"/>
    </group>
</launch>
